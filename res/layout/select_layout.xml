<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bk_color"
    android:gravity="center_vertical"
    android:orientation="vertical" >
    
	<Button 
	   android:id="@+id/one_item_button"
	   android:textColor="@color/font_color"
	   android:background="@drawable/btn_selector"
	   android:textSize="30sp"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:text="@string/one_item"
	   android:layout_gravity="center_horizontal" />
	
	<Button 
	   android:id="@+id/four_item_button"
	   android:textColor="@color/font_color"
	   android:background="@drawable/btn_selector"
	   android:textSize="30sp"
	   android:layout_marginTop="20dp"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:text="@string/four_item"
	   android:layout_gravity="center_horizontal" />
	
	<Button 
	   android:id="@+id/nine_item_button"
	   android:textColor="@color/font_color"
	   android:layout_marginTop="20dp"
	   android:background="@drawable/btn_selector"
	   android:textSize="30sp"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content"
	   android:text="@string/nine_item"
	   android:layout_gravity="center_horizontal" />
    
</LinearLayout>
